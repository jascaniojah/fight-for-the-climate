<% include ../partials/header %>

<title><%= source.name_long %></title>

<div class="container my-5">
    <div class="flex">
        <a href="/sources" class="prev-page"><i class="fas fa-reply"></i></i> Source List</a>
        <div class="dropdown">
            <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-ellipsis-v"></i>
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/sources/<%= source._id %>/edit"><i class="fas fa-pencil-alt"></i>   Edit</a>
                <form method="POST" action="/sources/<%= source._id %>?_method=DELETE"><button class="dropdown-item"><i class="fas fa-trash-alt"></i>   Delete</button></form>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <h2><%= source.name_long %> <span id="source-short-name">(<%= source.name_short %>)</span></h2>
        <hr>
        <div class="row" id="source-container">
            <div class="col-sm-4">
                <div class="centered mb-2">
                    <img src="<%= source.logo %>" alt="<%= source.name_short %> logo">
                    <a id="edit-photo" href="#">Edit Source Logo</a>
                </div>
                <h4>Stats</h4>
                <hr>
                <p>Reputability Rating: <%= source.reputability %></p>
                <p>Total Facts: <%= source.number_of_facts %></p>
            </div>
            <div class="col-sm-8">
                <h4>Overview</h4><hr>
                <p class="mb-5"><%= source.wikipedia_summary.substring(0, 600) %>... <a href="<%= source.wikipedia_url %>" target="_blank">keep reading on Wikipedia</a></p>
                <h5 class="center">Facts from <b><%= source.name_long %></b></h5>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Fact</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col">submitted by</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < facts.length; i++) { %>
                            <% if (facts[i].source_name == source.name_short) { %>
                                <tr>
                                    <td><%= facts[i].headline %></td>
                                    <td></td>
                                    <td></td>
                                    <td><%= facts[i].contributor %></td>
                                </tr>
                                <% } %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <% include ../partials/footer %>