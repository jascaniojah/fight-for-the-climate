<% include ./partials/header %>

<title>Home | Fight For The Climate</title>

<!-- FACTS -->
<div class="container">
    <h4 class="mt-5">Facts</h4>
    <hr>
</div>

<div class="container-fluid mx-2">
    <div class="row">
        <% for (var i = 0; i < facts.length; i++) { %>
            <div class="col-12 col-sm-6 col-xl-3 p-2">
                <div class="fact-card">
                    <div class="fact-card-contents">
                        <div class="top-pane mb-2">
                            <span><button class="vote-button" onclick=""><i class="fas fa-chevron-up upvote"></i></button><%= facts[i].votes %></span>
                            <a href="#"><em>augusthalverson</em></a>
                        </div>
                        <h3><%= facts[i].headline %></h3>
                        <p><%= facts[i].details.substring(0,150) + "..." %></p>
                        <div class="flex">
                            <a href="/facts/<%= facts[i]._id %>"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/e/e5/NASA_logo.svg/1200px-NASA_logo.svg.png" alt="Nasa Logo" height="30"></a>
                            <a href="/facts/<%= facts[i]._id %>">more details  <i class="fa fa-long-arrow-alt-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    <% include ./partials/footer %>
    