<% include ../partials/header %>

<title><%= fact.headline %></title>

<div class="container my-5">
    <div class="show-container">
        <a class="prev-page" href="/facts"><i class="fas fa-reply"></i> Go Back</a>
        <div id="fact-show">
            <div class="flex top">
                <h6><em>Contributor: <%= fact.contributor %></em></h6>
                <div class="dropdown">
                    <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/facts/<%= fact._id %>/edit"><i class="fas fa-pencil-alt"></i>   Edit</a>
                        <form method="POST" action="/facts/<%= fact._id %>?_method=DELETE"><button class="dropdown-item" ><i class="fas fa-trash-alt"></i>   Delete</a></button></form>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#"><i class="fas fa-globe"></i>   Source Info Page</a>
                    </div>
                </div>
            </div>
            
            
            <h3><%= fact.headline %></h3>
            <h6>Source: <a href="<%= fact.source_link %>" target="_blank"><%= fact.source_name %> <i class="fas fa-external-link-alt"></i></a></h6>
            <hr>
            <p><%= fact.details %></p>
            <button name="upvote" class="submit" onclick="upvote('<%= fact._id %>')"><i class="fas fa-sort-amount-up"></i> upvote this fact</button><span class="ml-2"><span id="vote-count"><%= fact.votes %></span> votes</span>
            <hr>
            <p></p>
            <div class="flex">
                <span>Reputability score: A+  <i class="far fa-question-circle"></i></span>
                <a href="https://www.nasa.gov/" target="_blank"> <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/e/e5/NASA_logo.svg/1200px-NASA_logo.svg.png" alt="Nasa Logo" height="40"> </a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>